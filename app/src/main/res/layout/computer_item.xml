<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_computador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="24dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_conteudo_computador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_computador"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/computer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_nome_computador"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDV 01"
                app:layout_constraintEnd_toEndOf="@id/iv_computador"
                app:layout_constraintStart_toStartOf="@id/iv_computador"
                app:layout_constraintTop_toBottomOf="@id/iv_computador" />

            <TextView
                android:id="@+id/tv_ip_computador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.130.7.201"
                app:layout_constraintEnd_toEndOf="@id/iv_computador"
                app:layout_constraintStart_toStartOf="@id/iv_computador"
                app:layout_constraintTop_toBottomOf="@id/tv_nome_computador" />

            <TextView
                android:id="@+id/tv_versao_econect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V RLS 14.4.1-0"
                app:layout_constraintEnd_toEndOf="@id/iv_computador"
                app:layout_constraintStart_toStartOf="@id/iv_computador"
                app:layout_constraintTop_toBottomOf="@id/tv_ip_computador" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>